{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "noEmitOnError": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["*"]
        }
    },
    "exclude": ["node_modules"]
}